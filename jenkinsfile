pipeline {
    agent any

    tools {
        maven 'M2_HOME'
        jdk 'JAVA_HOME'
    }

    environment {
        IMAGE_NAME = 'sahar2002/spring-app'
        DOCKER_USER = 'sahar2002'
    }

    stages {
        stage('Checkout') {
            steps {
                deleteDir()
                git branch: 'main', 
                    url: 'https://github.com/sahar-bg/ProjetSpring.git'
                echo '‚úÖ Code t√©l√©charg√© avec succ√®s'
            }
        }

        stage('Clean') {
            steps {
                sh 'mvn clean'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                // Remplace 'sonar' par le nom exact de ton installation SonarQube dans Jenkins
                withSonarQubeEnv('sonar') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    timeout(time: 3, unit: 'MINUTES') {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "‚ùå Quality Gate √©chou√©: ${qg.status}"
                        } else {
                            echo "‚úÖ Quality Gate r√©ussi: ${qg.status}"
                        }
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-token',
                                                  usernameVariable: 'DOCKER_USER',
                                                  passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                        docker login -u ${DOCKER_USER} -p ${DOCKER_PASS}
                        docker tag ${IMAGE_NAME} ${DOCKER_USER}/${IMAGE_NAME}:latest
                        docker push ${DOCKER_USER}/${IMAGE_NAME}:latest
                    """
                }
            }
        }
    }

    post {
        always {
            echo '=== POST ACTIONS ==='
            sh 'docker image prune -f || true'
            echo 'Nettoyage termin√©'
        }
        success {
            echo 'üéâ PIPELINE R√âUSSI !'
        }
        failure {
            echo '‚ùå Pipeline √©chou√©'
            echo 'V√©rifiez les logs ci-dessus'
        }
    }
}
